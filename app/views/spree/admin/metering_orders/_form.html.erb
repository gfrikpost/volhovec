<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @metering_order } %>
<div class="row">
  <div id="general_fields" class="alpha thirteen columns">
    <div class="alpha four columns">
      <%= f.field_container :name do %>
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'fullwidth' %>
      <% end %>

      <%= f.field_container :phone do %>
        <%= f.label :phone %>
        <%= f.text_field :phone, :class => 'fullwidth' %>
      <% end %>
    </div>

    <div class="omega nine columns">
      <%= f.field_container :information do %>
        <%= f.label :information %><br />
        <%= f.text_area :information, :rows => 7, :class => 'fullwidth' %>
      <% end %>
    </div>

    <div class="alpha four columns">
      <%= f.field_container :state do %>
        <%= f.label :state %>
        <%= f.select :state, @state_names, {}, {:class => 'select2 fullwidth'} %>
      <% end %>
    </div>
  </div>
</div>
