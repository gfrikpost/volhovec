<%= javascript_include_tag 'jquery.jcarousel.min.js' %>
<%= javascript_include_tag 'store/product_constructor' %>
<%= stylesheet_link_tag 'jquery.jcarousel.css' %>

<%= javascript_tag "var Product = #{@product_hash.to_json}" %>


<div data-hook="product_show" itemscope itemtype="http://schema.org/Product">
  <% @body_id = 'product-details' %>

  <div class="columns six alpha" data-hook="product_left_part">
    <div class="row" data-hook="product_left_part_wrap">

      <div class="h1" style="margin-left: 97px;" itemprop="name"><%= accurate_title %></div>
      <div id="product-images" data-hook="product_images">
        <div id="main-image" data-hook>
          <%= render :partial => 'image' %>
        </div>
        <div id="cart-form" data-hook="cart_form" style="margin-top:30px;margin-left: 40px;">
          <%= render :partial => 'cart_form' %>
        </div>
        <div id="product-description" style="margin-left:50px;" data-hook="product_description"
          <div itemprop="description" data-hook="description">
            <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
          </div>
        </div>
      </div>

      <div data-hook="product_properties">
        <%= render :partial => 'properties' %>
      </div>

      <div data-hook="promotions">
        <%= render :partial => 'promotions' %>
      </div>

    </div>
  </div>

  <div class="columns ten omega" data-hook="product_right_part">
    <div class="row" data-hook="product_right_part_wrap">

      <div id="product_constructor" style="padding-top: 30px;">

      <div id="sku" class="config-info"></div>
      <div id="material" class="config-info">Материал: <span></span></div>
      <div id="model-carousel" style="width: 300px;">
        <ul>
        </ul>
      </div>

      <div id="color-carousel" style="width: 300px;">
        <div class="config-info">Цвет: <span></span></div>
        <ul>
        </ul>
      </div>

      <div id="glass-carousel" style="width: 300px;">
        <div class="config-info dn">Стекло: <span></span></div>
        <ul>
        </ul>
      </div>

      <div id="making-portal-carousel" style="width: 300px;">
        <div class="config-info dn">Оформление портала: <span></span></div>
        <ul>
        </ul>
      </div>
      <%= render :partial => 'taxons' %>
    </div>
  </div>

</div>